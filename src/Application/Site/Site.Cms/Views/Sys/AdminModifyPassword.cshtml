
@{
    ViewBag.Title = "修改密码";
}
@using MicBeach.Web.Utility
@using MicBeach.ViewModel.Sys.Request
@model ModifyPasswordViewModel

<div id="page-body">
    <div id="page-body-inner" class="pdt-10">
        @using (Html.AjaxBeginForm("AdminModifyPassword", "Sys", new AjaxFormOptions() { HttpMethod = "Post", OnSuccess = "SuccessCallback", OnFailure = "FailedCallback" }, new { id = "default-form", @class= "layui-form" }))
        {
            @Html.HiddenFor(c => c.SysNo)
            <div class="form-group">
                <label class="col-form-label">新密码</label>
                <div class="d-inline-block w-200">
                    @Html.PasswordFor(a => a.NewPassword, new { @class = "form-control w-200" })
                </div>
                <div class="d-inline-block">@Html.DefaultValidationMessageFor(c => c.NewPassword, "", new {@class= "form-validate-msg" })</div>
            </div>
            <div class="form-group">
                <label class="col-form-label">确认新密码</label>
                <div class="d-inline-block w-200">
                    @Html.PasswordFor(a => a.ConfirmNewPassword, new { @class = "form-control w-200" })
                </div>
                <div class="d-inline-block">@Html.DefaultValidationMessageFor(c => c.ConfirmNewPassword, "", new {@class= "form-validate-msg" })</div>
            </div>
        }
    </div>
</div>
@section Scripts{ 
<script type="text/javascript">
    $(function () {
        BindEnterEvent(SubmitForm);
    });

    //提交
    function SubmitForm() {
        $("#default-form").submit();
    }

    function ArtEvent() {
        SubmitForm();
        return false;
    }
</script> 
}



